<%- include("partials/header.ejs")%>

<form action="/create" method="post" class="container mb-2">
  <input type="hidden" name="author" value="<%= username %>" />
  <input type="hidden" name="id" value="<%= id %>" />
  <input type="hidden" name="date" value="<%= date %>" />
  <label for="title">Enter post title:</label>
  <br>
  <input type="text" name="title" maxlength="30" class="form-control" required/>
  <br>
  <label for="desc">
    Enter short description for your post:
  </label>
  <br>
  <input type="text" name="desc" maxlength="80" class="form-control"/>
  <br>
  <label for="content">Enter your content here:</label>
  <br>
  <textarea id="my-expressjs-tinymce-app" name="content">Hello, World!</textarea>
  <br>
  <button type="submit" class="btn btn-primary">Create post!</button>
</form>

<%- include("partials/footer.ejs")%>
